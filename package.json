{
  "name": "qualicare-ai",
  "version": "1.0.0",
  "private": true,
  "description": "QualiCare AI - Monorepo for quail health monitoring system",
  "scripts": {
    "dev": "concurrently -n \"WEB,SERVER\" -c \"cyan,green\" \"pnpm --filter=client run dev --host\" \"pnpm --filter=server run dev\"",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "build": "pnpm --filter client build && pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "start:server": "pnpm --filter server start",
    "typecheck": "pnpm --recursive run typecheck",
    "lint": "pnpm --recursive run lint",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .turbo && rm -rf node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
